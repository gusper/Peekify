<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SpotiPeek.App">
    
  <!-- Colors -->
  <Color x:Key="ZBackColor">#222</Color>
  <Color x:Key="ZForeColor">#ccc</Color>
  <Color x:Key="ZBorderColor">#888</Color>

  <!-- Brushes -->
  <SolidColorBrush x:Key="ZBackBrush" Color="{StaticResource ZBackColor}"/>
  <SolidColorBrush x:Key="ZForeBrush" Color="{StaticResource ZForeColor}"/>
  <SolidColorBrush x:Key="ZBorderBrush" Color="{StaticResource ZBorderColor}"/>

</ResourceDictionary>