<Window x:Class="SpotiPeek.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="50" Width="200" 
        ResizeMode="NoResize" ShowInTaskbar="False" 
        IsTabStop="False" Topmost="True" WindowStyle="None" 
        Opacity=".4" SizeToContent="WidthAndHeight"
        Background="#000" AllowsTransparency="True">

  <Grid x:Name="MainPane" Margin="0,-5">
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <StackPanel Grid.Row="0" Grid.Column="0" x:Name="StatusStackPanel" Orientation="Horizontal">
      <Label x:Name="StatusInfoLabel" Foreground="LightPink" FontFamily="Segoe UI" FontSize="9"/>
    </StackPanel>
    <Label Grid.Row="0" Grid.Column="0" x:Name="TrackInfoLabel" Foreground="#fff" FontFamily="Segoe UI" FontSize="9"/>
    <StackPanel Grid.Row="1" Grid.Column="0" x:Name="ImageStackPanel">
      <Image x:Name="AlbumArtImage" Width="160" Height="160" />
    </StackPanel>
  </Grid>

  <Window.ContextMenu>
    <ContextMenu>
      <MenuItem Header="_Refresh" Name="ContextMenuRefresh"/>
      <Separator/>
      <MenuItem Header="E_xit" Name="ContextMenuExit"/>
    </ContextMenu>
  </Window.ContextMenu>
</Window>
