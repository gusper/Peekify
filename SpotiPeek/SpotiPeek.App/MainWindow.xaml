<Window x:Class="SpotiPeek.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" 
        ResizeMode="NoResize" ShowInTaskbar="False" 
        IsTabStop="False" Topmost="True" WindowStyle="None" 
        Opacity=".4" SizeToContent="WidthAndHeight"
        Background="#000" AllowsTransparency="True">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" x:Name="ReconnectButton" Content="Reconnect" Padding="3" Background="DarkRed" Foreground="White"/>
        <Label Grid.Column="1" x:Name="TrackInfoLabel" Foreground="White" />
    </Grid>
</Window>
