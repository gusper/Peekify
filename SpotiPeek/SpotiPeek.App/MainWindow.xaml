<Window x:Class="SpotiPeek.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="50" Width="200" 
        ResizeMode="NoResize" ShowInTaskbar="False" 
        IsTabStop="False" Topmost="True" WindowStyle="None" 
        Opacity=".4" SizeToContent="WidthAndHeight"
        Background="#000" AllowsTransparency="True">

    <Grid Margin="0,-5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" x:Name="StatusStackPanel" Orientation="Horizontal">
            <Label x:Name="StatusInfoLabel" Foreground="LightPink" />
        </StackPanel>
        <Label Grid.Column="1" x:Name="TrackInfoLabel" Foreground="#fff" FontFamily="Segoe UI" FontSize="9"/>
    </Grid>
</Window>
